{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "kiro-simple-retirement-planner",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index"
    }
  ],
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "python3.9"
    }
  },
  "installCommand": "pip install --no-cache-dir -r api/requirements.txt",
  "buildCommand": ""
}